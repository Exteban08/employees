{
  "name": "root",
  "private": true,
  "devDependencies": {
    "lerna": "^4.0.0"
  },
  "engines": {
    "node": "16.14.2"
  },
  "scripts": {
    "database:start": "npx lerna run database:start",
    "database:stop": "npx lerna run database:stop",
    "frontend:dev": "npx lerna run --scope @employees/frontend dev",
    "backend:dev": "npx lerna run --scope @employees/backend dev",
    "dev": "npm run database:start & npx lerna run --parallel dev",
    "start": "npx lerna run --scope @employees/backend start:prod",
    "postinstall": "npx lerna run --scope @employees/backend build"
  },
  "dependencies": {
    "@mui/icons-material": "^5.6.0"
  },
  "prisma": {
    "seed": "ts-node ./packages/backend/prisma/seed.ts",
    "schema": "./packages/backend/prisma/schema.prisma"
  }
}
